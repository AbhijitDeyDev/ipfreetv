<Page
    xmlns="http://schemas.nativescript.org/tns.xsd"
    xmlns:ab="components/action-bar"
    xmlns:cl="components/channel-list"
    navigatingTo="navigatingTo">
    <GridLayout
        columns="*"
        rows="50, *">

        <ab:action-bar
            row="0"
            title="{{'All '+ ($parent.channels.length) +' channels'}}"
            hideBackBtn="true"
            showSearch="true"
            searchInputChange="{{ $parent.onSearchInputChange }}" />

        <cl:channel-list
            row="1"
            channels="{{channels}}" />

        <StackLayout
            row="1"
            verticalAlignment="center"
            class="p-8"
            hidden="{{!!channels.length}}">
            <Image
                src="~/assets/icons/all-channel.png"
                width="50"
                height="50"
                tintColor="#08CB00"
                class="mb-5" />
            <Label
                text="No channel found"
                textWrap="true"
                textTransform="none"
                class="text-center text-lg mb-5" />
        </StackLayout>
    </GridLayout>
</Page>
